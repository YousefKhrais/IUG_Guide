<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/logo_iug"
                app:layout_constraintBottom_toTopOf="@+id/guideline2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layoutDirection="rtl"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layoutDirection="rtl"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layoutDirection="rtl"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/academic_program"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="161"
                            android:textColor="@color/secondary_accent"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="برنامجاً أكاديميا"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:layout_marginRight="32dp"
                        android:gravity="center"
                        android:layoutDirection="rtl"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/International_Partners"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="166"
                            android:textColor="@color/secondary_accent"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="شريكاً خارجياً"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layoutDirection="rtl"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layoutDirection="rtl"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/coperataion_agreement"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="89"
                            android:textColor="@color/secondary_accent"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="اتفاقية تعاون مشترك"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layoutDirection="rtl"
                        android:orientation="vertical"

                        >

                        <TextView
                            android:id="@+id/research_center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="33"
                            android:textColor="@color/secondary_accent"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="مركزاً علمياً وبحثياً"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="عن الجامعة"
                android:textColor="#800000"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="الجامعة الإسلامية بغزة مؤسسة أكاديمية مستقلة من مؤسسات التعليم العالي، تعمل بإشراف وزارة التربية والتعليم العالي، وهي عضو في: اتحاد الجامعات العربية، ورابطة الجامعات الإسلامية ، واتحاد الجامعات الإسلامية ، ورابطة جامعات البحر الأبيض المتوسط، والاتحاد الدولي للجامعات، وتربطها علاقات تعاون بالكثير من الجامعات العربية والأجنبية.
                \n\nتوفر الجامعة لطلبتها جواً أكاديمياً ملتزماً بالقيم الإسلامية ومراعياً لظروف الشعب الفلسطيني وتقاليده، وتضع كل الإمكانيات المتاحة لخدمة العملية التعليمية، وتهتم بالجانب التطبيقي اهتمامها بالجانب النظري، كما وتهتم بتوظيف وسائل التكنولوجيا المتوفرة في خدمة العملية التعليمية."
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="البرامج والمناهج الدراسية"
                android:textColor="#800000"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="تسعى الجامعه بشكل دائم لتحديث مناهجها لمواكبة التطور العلمي الذي تشهده حقول المعرفة، وللجامعة الإسلامية ثقافة تدعو إلى الإبداع والتطوير والتنمية، والأخذ بسبل التقدم العالمية."
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="رؤية الجامعة"
                android:textColor="#800000"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="منارة علمية رائدة للمعرفة والثقافة وخدمة الإنسانية لإحداث نهضة مجتمعية شاملة"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="رسالة الجامعة"
                android:textColor="#800000"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="الجامعة الإسلامية مؤسسة أكاديمية تسعى للنهوض بالمستوى العلمي والثقافي والحضاري، تعمل على مواكبة الاتجاهات الحديثة في التعليم العالي والتطور التكنولوجي، وتشجع البحث العلمي وتساهم في بناء الأجيال وتنمية المجتمع في إطار من القيم الإسلامية"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
